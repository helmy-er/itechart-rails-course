          <td> <%=link_to "edit",edit_expense_path(expense.id) %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'New Expense', new_expense_path(category_id),class:"one" %>
